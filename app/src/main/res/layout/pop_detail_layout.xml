<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/action_bg"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pic">

            <TextView
                android:id="@+id/tv_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="德利德利1盒36支"
                android:textColor="@color/desc"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pro_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:text="SKU：CS12345678"
                android:textColor="@color/sku"
                android:textSize="13sp" />
        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:src="@mipmap/close" />

    <RelativeLayout
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pop_detail_bg">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_main_color_bg"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="确 定"
            android:textColor="@color/action_bg"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:paddingLeft="3dp"
            android:paddingRight="8dp"
            android:text="领取数量"
            android:textColor="@color/title"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cut"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cicle_corner_trans_green"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/time_back"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_choose_num"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_take_num"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cicle_corner_trans_green"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/time_back"
                android:textSize="18sp" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_end"
        android:layout_below="@id/rl_top"
        android:background="@color/pop_detail_bg">

        <TextView
            android:id="@+id/tv_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="------------商品详情------------"
            android:textColor="@color/title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_de"
            android:paddingLeft="24dp"
            android:paddingTop="18dp"
            android:paddingRight="12dp"
            android:paddingBottom="26dp"
            android:text="产品名称：得力圆珠笔1盒36支"
            android:textColor="@color/pop_desc"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>