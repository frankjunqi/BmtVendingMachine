<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/close" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_shop" />


        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_pic"
            android:text="德利德利1盒36支" />

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pro_name"
            android:layout_toRightOf="@id/iv_pic"
            android:text="SKU：CS12345678" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="-------商品详情-------" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_de"
            android:text="产品名称：得力圆珠笔1盒36支" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_middle"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_main_choice_bg">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/shape_main_color_bg"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:text="确定"
            android:textColor="@color/action_bg" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:paddingLeft="3dp"
            android:paddingRight="8dp"
            android:text="商品数量"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cut"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cicle_corner_trans_green"
                android:gravity="center"
                android:text="一"
                android:textColor="#CC080606"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_choose_num"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_take_num"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/cicle_corner_trans_green"
                android:gravity="center"
                android:text="+"
                android:textColor="#CC080606"
                android:textSize="18sp" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>