<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="正在初始化系统，请等待......"
        android:textColor="@color/desc"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/pb_loadingdata"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:visibility="visible" />

    <com.seekwork.bangmart.view.SingleCountDownView
        android:id="@+id/singleCountDownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_btn_take"
        android:enabled="false"
        android:gravity="center"
        android:text="确 定"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_mac_error"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:fadeScrollbars="true"
        android:gravity="left|top"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:textSize="16sp"
        android:visibility="invisible" />


</LinearLayout>